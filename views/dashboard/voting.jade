block page-script
  script.
    $('.voting').addClass('active');

    $('#historical').on('shown.bs.collapse', function () {
      this.scrollIntoView();

    });

    $('#show-hide').click(function() {
        if ($(this).text() === 'Show Historical') {
            $(this).text('Hide Historical');
        }
        else {
            $(this).text('Show Historical');
        }
    });