doctype html
html(lang='en')
  head
    link(href='https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css', rel='stylesheet')
    script(src='https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='/images/favicon.ico')
    title Rockt Portal
    // Bootstrap core CSS
    link(href='/dist/css/bootstrap.min.css', rel='stylesheet')
    // Icons
    link(href='/css/font-awesome.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/css/style.css', rel='stylesheet')
    block page-stylesheet
  body
    #wrapper.container-fluid
      .row
        nav.sidebar.col-xs-12.col-sm-4.col-lg-3.col-xl-2
          h1.site-title
            a(href='/dashboard')
              em.fa.fa-rocket
              |  Rockt.io
          a#menu-toggle.btn.btn-default(href='#menu-toggle')
            em.fa.fa-bars
          ul.nav.nav-pills.flex-column.sidebar-nav
            li.nav-item
              a.nav-link.dashboard(href='/dashboard/index')
                em.fa.fa-dashboard
                |  Dashboard 
                span.sr-only (current)
            li.nav-item
              a.nav-link.fund(href='/dashboard/fund')
                em.fa.fa-bar-chart
                |  Fund Performance
            li.nav-item
              a.nav-link.voting(href='/dashboard/voting')
                em.fa.fa-pencil-square-o
                |  Voting
            li.nav-item
              a.nav-link.withdrawal(href='/dashboard/withdrawal')
                em.fa.fa-hand-o-up
                |  Withdrawl
            li.nav-item
              a.nav-link.cards(href='/dashboard/cards')
                em.fa.fa-clone
                |  My Cards
            li.nav-item
              a.nav-link.roadmap(href='/dashboard/roadmap')
                em.fa.fa-calendar-o
                |  Roadmap
          a.logout-button(href='/logout')
            em.fa.fa-power-off
            |  Signout
        block main        
